<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.laithlab.core"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"/>

    <application
        android:name=".RhythmCoreApp"
        android:allowBackup="true"
        android:label="@string/app_name">
        <activity android:name=".activity.ArtistActivity"/>
        <activity android:name=".activity.AlbumActivity"/>
        <activity
            android:name=".activity.SwipePlayerActivity"
            android:launchMode="singleTop"/>

        <service
            android:name=".service.MediaPlayerService"
            android:stopWithTask="true"
            android:enabled="true"
            android:exported="true">
        </service>

        <service android:name="com.laithlab.core.service.WearMessageService">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>

    </application>

</manifest>
